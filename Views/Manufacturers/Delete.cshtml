@model SewingMaterialsStorage.Models.Manufacturer

@{
    ViewData["Title"] = "Удалить производителя";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title"><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5>Вы уверены, что хотите удалить этого производителя?</h5>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Наименование:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ManufacturerName)</dd>

                    <dt class="col-sm-4">Страна:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Country.CountryName)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ManufacturerId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Удалить
                </button>
            </div>
        </form>
    </div>
</div>