@model SewingMaterialsStorage.Models.Manufacturer

<div class="container mt-4">
    <h2>Добавить производителя</h2>
    <hr />

    <form asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ManufacturerName" class="control-label">Наименование производителя</label>
                    <input asp-for="ManufacturerName" class="form-control" placeholder="Введите название" />
                    <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CountryId" class="control-label">Страна</label>
                    <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId">
                        <option value="">-- Выберите страну --</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}