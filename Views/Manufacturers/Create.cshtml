@model SewingMaterialsStorage.Models.Manufacturer


@{
    ViewData["Title"] = "Добавить производителя";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title"><i class="bi bi-plus-circle"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div> 

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ManufacturerName" class="form-label">Наименование производителя</label>
                    <input asp-for="ManufacturerName" class="form-control" required />
                    <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CountryId" class="control-label">Страна</label>
                    <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId">
                        <option value="">-- Выберите страну --</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Сохранить
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').validate({
                rules: {
                    ManufacturerName: {
                        required: true,
                        minlength: 2
                    },
                    CountryId: {
                        required: true
                    }
                },
                messages: {
                    ManufacturerName: {
                        required: "Пожалуйста, введите название производителя",
                        minlength: "Название должно содержать минимум 2 символа"
                    },
                    CountryId: {
                        required: "Пожалуйста, выберите страну"
                    }
                }
            });
        });
    </script>
}