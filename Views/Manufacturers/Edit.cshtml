@model SewingMaterialsStorage.Models.Manufacturer

@{
    ViewData["Title"] = "Редактировать производителя";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title"><i class="bi bi-pencil"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ManufacturerId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <label asp-for="ManufacturerName" class="form-label">Наименование производителя</label>
                    <input asp-for="ManufacturerName" class="form-control" placeholder="Введите название" />
                    <span asp-validation-for="ManufacturerName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CountryId" class="form-label">Страна</label>
                    <select asp-for="CountryId" class="form-select" asp-items="ViewBag.CountryId">
                        <option value="">-- Выберите страну --</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Сохранить
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}