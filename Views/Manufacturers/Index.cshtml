@model IEnumerable<SewingMaterialsStorage.Models.Manufacturer>

@{
    ViewData["Title"] = "Производители";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-building"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Добавить производителя
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Наименование</th>
                        <th>Страна</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ManufacturerName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Country.CountryName)</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ManufacturerId" class="btn btn-info" title="Подробности">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ManufacturerId" class="btn btn-warning" title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ManufacturerId" class="btn btn-danger" title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>