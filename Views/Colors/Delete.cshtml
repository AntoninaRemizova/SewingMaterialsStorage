@model SewingMaterialsStorage.Models.Color

@{
    ViewData["Title"] = "Удалить цвет";
}
@if (Model.MaterialColors?.Count > 0)
{
    <div class="alert alert-warning">
        Этот цвет используется в @Model.MaterialColors.Count материалах.
        Удаление приведет к удалению этих связей.
    </div>
}
<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title"><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5>Вы уверены, что хотите удалить этот цвет?</h5>
            <p class="mb-0">Это действие нельзя отменить.</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Название:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ColorName)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ColorId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Удалить
                </button>
            </div>
        </form>
    </div>
</div>

