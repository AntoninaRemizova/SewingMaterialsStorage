@model SewingMaterialsStorage.Models.Color

<div class="container mt-4">
    <h2>Добавить цвет</h2>
    <hr />

    <form asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ColorName" class="control-label">Название цвета</label>
                    <input asp-for="ColorName" class="form-control" placeholder="Введите название цвета" />
                    <span asp-validation-for="ColorName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}