@model IEnumerable<SewingMaterialsStorage.Models.Material>

@{
    ViewData["Title"] = "Материалы";
}

<!-- Заголовок страницы с кнопкой добавления -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>
        <i class="bi bi-box-seam"></i>
        @ViewData["Title"]
    </h1>

    <a asp-action="Create"
       class="btn btn-primary ms-2">
        <i class="bi bi-plus-circle"></i>
        Добавить материал
    </a>
</div>

<!-- Блоки уведомлений -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Основная карточка с таблицей -->
<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">

            <!-- Таблица материалов -->
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Наименование</th>
                        <th>Артикул</th>
                        <th>Цена</th>
                        <th>Тип</th>
                        <th>Производитель</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Название материала -->
                            <td>
                                @item.MaterialName
                            </td>

                            <!-- Артикул -->
                            <td>
                                @(item.Article ?? "-")
                            </td>

                            <!-- Цена -->
                            <td>
                                @item.PricePerUnit.ToString("C")
                            </td>

                            <!-- Тип материала -->
                            <td>
                                @item.MaterialType?.TypeName
                            </td>

                            <!-- Производитель -->
                            <td>
                                @item.Manufacturer?.ManufacturerName
                            </td>

                            <!-- Кнопки действий -->
                            <td class="text-end">
                                <div class="btn-group btn-group-sm"
                                     role="group">

                                    <!-- Кнопка подробностей -->
                                    <a asp-action="Details"
                                       asp-route-id="@item.MaterialId"
                                       class="btn btn-outline-info"
                                       title="Подробности">
                                        <i class="bi bi-info-circle"></i>
                                        Подробнее
                                    </a>

                                    <!-- Кнопка редактирования -->
                                    <a asp-action="Edit"
                                       asp-route-id="@item.MaterialId"
                                       class="btn btn-outline-primary"
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                        Изменить
                                    </a>

                                    <!-- Кнопка удаления -->
                                    <a asp-action="Delete"
                                       asp-route-id="@item.MaterialId"
                                       class="btn btn-outline-danger"
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                        Удалить
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>