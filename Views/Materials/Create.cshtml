@model SewingMaterialsStorage.Models.Material
@{
    ViewData["Title"] = "Добавить материал";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="materialForm">
        <!-- Основные данные -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-info-circle"></i> Основная информация
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MaterialName" class="form-label">
                            Наименование материала <span class="text-danger">*</span>
                        </label>
                        <input asp-for="MaterialName" class="form-control" placeholder="Введите название материала">
                        <span asp-validation-for="MaterialName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Article" class="form-label">Артикул</label>
                        <input asp-for="Article" class="form-control" placeholder="Введите артикул">
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PricePerUnit" class="form-label">
                            Цена за единицу (руб) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="PricePerUnit" type="number" class="form-control"
                               placeholder="0" min="1" step="1">
                        <span asp-validation-for="PricePerUnit" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MinThreshold" class="form-label">
                            Минимальный запас <span class="text-danger">*</span>
                        </label>
                        <input asp-for="MinThreshold" type="number" class="form-control"
                               placeholder="0" min="1">
                        <span asp-validation-for="MinThreshold" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Примечания</label>
                        <textarea asp-for="Notes" class="form-control" rows="2"
                                  placeholder="Дополнительная информация о материале"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Производитель -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-building"></i> Производитель
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label">
                            Производитель <span class="text-danger">*</span>
                        </label>
                        <select asp-for="ManufacturerId" asp-items="ViewBag.Manufacturers"
                                class="form-select" required>
                            <option value="">-- Выберите производителя --</option>
                        </select>
                        <span asp-validation-for="ManufacturerId" class="text-danger small"></span>
                        <div class="mt-2">
                            <a asp-controller="Manufacturers" asp-action="Create"
                               class="btn btn-sm btn-outline-primary"
                               target="_blank">
                                <i class="bi bi-plus-circle"></i> Добавить нового производителя
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Цвета и состав -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-palette"></i> Характеристики
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Цвета</label>
                        <div class="d-flex justify-content-between mb-2">
                            <input type="text" class="form-control" placeholder="Поиск цвета по названию..."
                                   oninput="filterCheckboxes('colorsContainer', this.value)">
                            <button type="button" class="btn btn-sm btn-outline-secondary ms-2"
                                    onclick="toggleAllCheckboxes('colorsContainer', false)">
                                Снять все
                            </button>
                        </div>
                        <div class="form-control" style="height: auto; min-height: 38px; max-height: 200px; overflow-y: auto;"
                             id="colorsContainer">
                            @foreach (var color in ViewBag.AllColors as List<Color>)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="selectedColors" value="@color.ColorId" id="color-@color.ColorId">
                                    <label class="form-check-label" for="color-@color.ColorId">
                                        @color.ColorName
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Состав</label>
                        <div class="d-flex justify-content-between mb-2">
                            <input type="text" class="form-control" placeholder="Поиск состава по названию..."
                                   oninput="filterCheckboxes('compositionsContainer', this.value)">
                            <button type="button" class="btn btn-sm btn-outline-secondary ms-2"
                                    onclick="toggleAllCheckboxes('compositionsContainer', false)">
                                Снять все
                            </button>
                        </div>
                        <div class="form-control" style="height: auto; min-height: 38px; max-height: 200px; overflow-y: auto;"
                             id="compositionsContainer">
                            @foreach (var composition in ViewBag.AllCompositions as List<Composition>)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="selectedCompositions" value="@composition.CompositionId" id="composition-@composition.CompositionId">
                                    <label class="form-check-label" for="composition-@composition.CompositionId">
                                        @composition.CompositionName
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Специфические характеристики -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-tags"></i> Спецификация
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="TypeId" class="form-label">
                            Тип материала <span class="text-danger">*</span>
                        </label>
                        <select asp-for="TypeId" asp-items="ViewBag.MaterialTypes"
                                class="form-select" id="typeSelect" required>
                            <option value="">-- Выберите тип материала --</option>
                        </select>
                        <span asp-validation-for="TypeId" class="text-danger small"></span>
                    </div>

                    <div id="dynamicFields" class="row g-3 mt-2"></div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Назад к списку
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Сохранить материал
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function filterCheckboxes(containerId, searchText) {
            const container = document.getElementById(containerId);
            const checkboxes = container.querySelectorAll('.form-check');

            checkboxes.forEach(checkbox => {
                const label = checkbox.querySelector('.form-check-label');
                if (label.textContent.toLowerCase().includes(searchText.toLowerCase())) {
                    checkbox.style.display = 'block';
                } else {
                    checkbox.style.display = 'none';
                }
            });
        }

        function toggleAllCheckboxes(containerId, checked) {
            const container = document.getElementById(containerId);
            const checkboxes = container.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                if (checkbox.style.display !== 'none') {
                    checkbox.checked = checked;
                }
            });
        }

        $(document).ready(function () {
            // Динамическая загрузка характеристик
            $('#typeSelect').change(function () {
                const typeId = $(this).val();
                $.get(`/Materials/GetTypeFields?typeId=${typeId}`, function (data) {
                    $('#dynamicFields').html(data);
                });
            });

            // Валидация формы
            $('#materialForm').validate({
                rules: {
                    MaterialName: { required: true, minlength: 2 },
                    PricePerUnit: { required: true, min: 1 },
                    MinThreshold: { required: true, min: 1 },
                    ManufacturerId: { required: true },
                    TypeId: { required: true }
                },
                messages: {
                    MaterialName: {
                        required: "Пожалуйста, введите название материала",
                        minlength: "Название должно содержать минимум 2 символа"
                    },
                    PricePerUnit: {
                        required: "Пожалуйста, укажите цену",
                        min: "Цена должна быть не менее 1 рубля"
                    },
                    MinThreshold: {
                        required: "Пожалуйста, укажите минимальный запас",
                        min: "Минимальный запас должен быть не менее 1"
                    },
                    ManufacturerId: "Пожалуйста, выберите производителя",
                    TypeId: "Пожалуйста, выберите тип материала"
                },
                errorElement: 'span',
                errorClass: 'text-danger small',
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });
        });
    </script>
}