@model SewingMaterialsStorage.Models.Composition

@{
    ViewData["Title"] = "Редактировать состав";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title"><i class="bi bi-pencil"></i> @ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CompositionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CompositionName" class="form-label">Название состава <span class="text-danger">*</span></label>
                <input asp-for="CompositionName" class="form-control" />
                <span asp-validation-for="CompositionName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Сохранить
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}