@model SewingMaterialsStorage.Models.Supply

<div class="container mt-4">
    <h2>Удаление поступления</h2>
    <h3>Вы уверены, что хотите удалить эту запись?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Дата поступления</dt>
        <dd class="col-sm-9">@Model.SupplyDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Материал</dt>
        <dd class="col-sm-9">@Model.Material.MaterialName</dd>

        <dt class="col-sm-3">Количество</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Сумма</dt>
        <dd class="col-sm-9">@((Model.Quantity * Model.Material.PricePerUnit).ToString("C"))</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplyId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>